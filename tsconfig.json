{
    "compilerOptions": {
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        /* Modules */
        "module": "commonjs",
        "rootDir": "./src",

        /* JavaScript Support */
         "allowJs": true,
         "checkJs": true,

        /* Emit */
        "declaration": false,
        "moduleResolution": "Node",
        "outDir": "./build",
        "removeComments": true,
        "noEmitOnError": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "skipLibCheck": true
    }
}
